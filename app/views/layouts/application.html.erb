<!DOCTYPE html>
  <html>
    <head>
      <title>Bookers2</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
    <body>
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <a class="navbar-brand" href="/">
              <span>Bookers</span>
            </a>
            <button class="navbar-toggler" type="button" date-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-lavel="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">

            <% if user_signed_in? %>
             　　<li>
                  <%=link_to user_path(current_user),class:"nav-link text-light" do %>
                  <i class="fas fa-home"></i>Home
                  <% end %>
                </li>




              <li>
                <a class="fas fa-users nav-link text-light" href="/users">Users</a>
              </li>
              <li>
                <a class="fas fa-book-open nav-link text-light" href="/books">Books</a>
              </li>
              <li>
                 <a class="fas fa-sign-out-alt nav-link text-light" rel="nofollow" data-method="delete" href="/users/sign_out">Log out</a>
              </li>
            <% else %>
            　<li>
                  <%=link_to root_path,class:"nav-link text-light" do %>
                  <i class="fas fa-home"></i>Home
                  <% end %>
                </li>
              <li>
                <a class="fas fa-link nav-link text-light" href="/home/about">About</a>
              </li>
              <li>
                <a class="fas fa-user-plus nav-link text-light" href="/users/sign_up">Sign up</a>
              </li>
              <li>
                <a class="fas fa-sign-in-alt nav-link text-light" href="/users/sign_in">Log in</a>
              </li>
            <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </header>

        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>





        <%= yield %>


      <footer>
        <div class="container mt-5">
          <div class="row">
            <div class="mx-auto">
              <p>CopyRight Infratop.inc</p>
            </div>
          </div>
        </div>
      </footer>
    </body>
  </html>
