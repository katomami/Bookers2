<main>
  <p id="notice"></p>
  
    
      <div class="col-md-9">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>errors prohibited this obj from being saved:
         <br>
          <% @user.errors.full_messages.each do |message| %>
           <%= message %>
          <% end %>
        <% end %>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class:'form-control @user_name' %>
          </div>

          <div class="form-group">
            <%= f.label :image %>
          </div>
          <div class="form-group">
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction %>
            <%= f.text_area :introduction, class: 'form-control @user_introduction' %>
          </div>
          <div class="form-group">

            <%= f.submit 'Update User', class: 'btn btn-secondary' %>
          </div>

        <% end %>
      </div>
    
  
</main>
